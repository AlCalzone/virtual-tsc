{
  "name": "virtual-tsc",
  "version": "0.6.1",
  "description": "Provides means to compile TypeScript code in memory",
  "main": "build/index.js",
  "types": "./build/index.d.ts",
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "watch": "npm run compile -- --watch",
    "test:ts": "mocha --require ts-node/register --require source-map-support/register src/**/*.test.ts",
    "test": "npm run test:ts",
    "coverage": "nyc npm run test:ts",
    "lint:ts": "lint:ts",
    "lint": "npm run lint:ts \"src/**/*.ts\"",
    "release": "release-script"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/virtual-tsc.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/virtual-tsc/issues"
  },
  "homepage": "https://github.com/AlCalzone/virtual-tsc#readme",
  "peerDependencies": {
    "@types/node": "*",
    "typescript": ">=2.0.0"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "picocolors": "1.0.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "~1.10.1",
    "@types/chai": "^4.0.4",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.34",
    "@types/sinon": "^4.0.0",
    "chai": "^4.1.2",
    "mocha": "^4.0.0",
    "nyc": "^11.2.1",
    "sinon": "^4.1.2",
    "source-map-support": "^0.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": ">=3.9.5"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
